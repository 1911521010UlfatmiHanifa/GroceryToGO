<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    tools:context=".EditDataDiri">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputEditJenkel"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/TextInputEditTgl"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TextInputEditTgl"
        app:layout_constraintTop_toBottomOf="@+id/TextInputEditTgl">

        <EditText
            android:id="@+id/ubah_jenkel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:background="@drawable/edit_text"
            android:drawableStart="@drawable/jenkel"
            android:drawablePadding="30dp"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Jenis Kelamin"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColorHint="#615151"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputEditTgl"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/TextInputEditNope"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="@+id/TextInputEditNope"
        app:layout_constraintTop_toBottomOf="@+id/TextInputEditNope">

        <EditText
            android:id="@+id/ubah_tgllahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:background="@drawable/edit_text"
            android:drawableStart="@drawable/calender"
            android:drawablePadding="30px"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Tanggal Lahir"
            android:inputType="date"
            android:paddingStart="20dp"
            android:textSize="16sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputEditNope"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/TextInputEditNama"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="@+id/TextInputEditNama"
        app:layout_constraintTop_toBottomOf="@+id/TextInputEditNama">

        <EditText
            android:id="@+id/ubah_nohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:background="@drawable/edit_text"
            android:drawableStart="@drawable/nohp"
            android:drawablePadding="30px"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Nomor HP"
            android:inputType="phone"
            android:paddingStart="20dp"
            android:textSize="16sp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputEditNama"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <EditText
            android:id="@+id/ubah_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_text"
            android:drawableStart="@drawable/user"
            android:drawablePadding="30px"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Nama Pengguna"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColorHint="#615151"
            android:textSize="16sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Ubah Data Diri"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="158dp"
        android:layout_height="155dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="159dp"
            android:layout_height="157dp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/simpan_datadiri"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#5EC401"
        android:drawableRight="@drawable/save"
        android:fontFamily="@font/poppins_bold"
        android:text="                        S I M P A N                      "
        android:textAllCaps="true"
        android:layout_marginHorizontal="35dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TextInputEditJenkel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TextInputEditJenkel" />

</androidx.constraintlayout.widget.ConstraintLayout>
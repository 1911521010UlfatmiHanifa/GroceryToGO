<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btn_kurang1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#F44336"
            android:text="-"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textHargaBarang" />

        <Button
            android:id="@+id/btn_tambah1"
            android:layout_width="50dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#8BC34A"
            android:text="+"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textHargaBarang" />

        <Button
            android:id="@+id/btn_tambahProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#5EC401"
            android:drawableRight="@drawable/next"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Tambahkan"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:cornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="@+id/imageBarang"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="@+id/imageBarang"
            app:layout_constraintTop_toBottomOf="@+id/textHargaBarang" />

        <ImageView
            android:id="@+id/imageBarang"
            android:layout_width="116dp"
            android:layout_height="107dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/contoh5" />

        <TextView
            android:id="@+id/textBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cheese Puffs Chips - 22 gm "
            android:textColor="#0B0A0A"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageBarang"
            app:layout_constraintStart_toStartOf="@+id/imageBarang"
            app:layout_constraintTop_toBottomOf="@+id/imageBarang" />

        <TextView
            android:id="@+id/textHargaBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="#F44336"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textHargaBarang2"
            app:layout_constraintTop_toBottomOf="@+id/textBarang" />

        <TextView
            android:id="@+id/textHargaBarang2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Rp"
            android:textColor="#F44336"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBarang" />

        <TextView
            android:id="@+id/textJumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/btn_tambah1"
            app:layout_constraintEnd_toStartOf="@+id/btn_kurang1"
            app:layout_constraintStart_toEndOf="@+id/btn_tambah1"
            app:layout_constraintTop_toTopOf="@+id/btn_tambah1" />

        <Button
            android:id="@+id/tambah_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#009688"
            android:drawableEnd="@drawable/pesanan"
            android:padding="11dp"
            android:text="Keranjang"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_tambah1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    tools:context=".UbahKataSandiActivity">

    <Button
        android:id="@+id/btn_ubah_sandi"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#5EC401"
        android:drawableRight="@drawable/save"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginHorizontal="35dp"
        android:text="                       S I M P A N                         "
        android:textAllCaps="true"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Ubah Kata Sandi"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputPwLama"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:focusable="auto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/pw_lama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/edit_text"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="30px"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Password Lama"
            android:inputType="textPassword"
            android:paddingStart="70px"
            android:paddingEnd="70px"
            android:password="true"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:textColorHint="#615151"
            android:textSize="16sp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInpurPwKonfir"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/TextInputPwLama"
        app:layout_constraintTop_toBottomOf="@+id/TextInputPwBaru"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/pw_konfir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/edit_text"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="30px"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Konfirmasi Password Baru"
            android:inputType="textPassword"
            android:paddingStart="70px"
            android:paddingEnd="70px"
            android:password="true"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:textColorHint="#615151"
            android:textSize="16sp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputPwBaru"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/TextInpurPwKonfir"
        app:layout_constraintStart_toStartOf="@+id/TextInpurPwKonfir"
        app:layout_constraintTop_toBottomOf="@+id/TextInputPwLama"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/pw_baru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/edit_text"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="30px"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Password Baru"
            android:inputType="textPassword"
            android:paddingStart="70px"
            android:paddingEnd="70px"
            android:password="true"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:textColorHint="#615151"
            android:textSize="16sp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="TextView"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextInputPwLama"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="TextView"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextInputPwBaru"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="TextView"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextInpurPwKonfir"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>